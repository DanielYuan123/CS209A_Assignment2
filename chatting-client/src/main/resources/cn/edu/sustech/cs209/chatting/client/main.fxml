<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cn.edu.sustech.cs209.chatting.client.Controller">
    <MenuBar VBox.vgrow="NEVER">
        <Menu mnemonicParsing="false" text="Chat">
            <MenuItem mnemonicParsing="false" onAction="#createPrivateChat" text="New Private Chat" />
            <MenuItem mnemonicParsing="false" onAction="#createGroupChat" text="New Group Chat" />
        </Menu>
    </MenuBar>
    <SplitPane dividerPositions="0.25" focusTraversable="true" VBox.vgrow="ALWAYS">
        <ListView fx:id="chatList" prefHeight="200.0" prefWidth="200.0" />
        <SplitPane dividerPositions="0.06787878787878789, 0.8624242424242424" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0">
         <Pane prefHeight="263.0" prefWidth="670.0">
            <children>
               <TextArea fx:id="Notification" prefHeight="22.0" prefWidth="670.0" />
            </children>
         </Pane>
            <ListView fx:id="chatContentList" prefHeight="200.0" prefWidth="200.0" />
            <HBox prefHeight="100.0" prefWidth="200.0">
                <TextArea fx:id="inputArea" prefHeight="138.0" prefWidth="624.0" HBox.hgrow="ALWAYS" />
                <Button maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#doSendMessage" text="Send" HBox.hgrow="ALWAYS" />
            </HBox>
        </SplitPane>
    </SplitPane>
    <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
        <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
        </padding>
        <Label fx:id="currentUsername" maxHeight="1.7976931348623157E308" prefHeight="15.0" prefWidth="221.0" text="Current User: " HBox.hgrow="ALWAYS">
            <font>
                <Font size="11.0" fx:id="x3" />
            </font>
            <textFill>
                <Color red="0.625" green="0.625" blue="0.625" fx:id="x4" />
            </textFill>
        </Label>
      <Label fx:id="Location" prefHeight="15.0" prefWidth="604.0" text="Location:" textFill="#868686" />
        <Label fx:id="currentOnlineCnt" font="$x3" text="Online: " textFill="$x4" HBox.hgrow="NEVER" />
    </HBox>
</VBox>
